<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
      
      <table class="table table-border">
        <tr>
          <th>会員ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %>　<%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active? %>
						<span class="text-active">有効</span>					
					  <% else %>
						<span class="text-invalid">退会</span>
					  <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
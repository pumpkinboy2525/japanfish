<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
      
      <table>
        <tr>
          <th>会員ID</th>
          <th>会員名</th>
          <th>ステータス</th>
        </tr>
        
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %>　<%= customer.first_name %>
            <% end %>
          </td>
          <td>有効</td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
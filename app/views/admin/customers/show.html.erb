<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員詳細</h2>
      <table class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_active? %>
						<span class="text-active">有効</span>					
					  <% else %>
						<span class="text-invalid">退会</span>
				  	<% end %>
          </td>
        </tr>
      </table>
      <%= link_to '編集する', edit_admin_customer_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-4">魚詳細</h2>

      <table class="table table-borderless">
        <tr>
          <td>画像</td>
          <td><%= image_tag @fish.image, size: "200x200" %></td>
        </tr>

        <tr>
          <td>魚名</td>
          <td><%= @fish.fish_name %></td>
        </tr>

        <tr>
          <td>魚説明</td>
          <td><%= @fish.fish_introduction %></td>
        </tr>

        <tr>
          <td>都道府県</td>
          <% @fish.prefecture_tags.each do |tag| %>
          <td><%= tag.name %></td>
          <% end %>
        </tr>

      </table>

      <%= link_to '編集する', edit_admin_fish_path(@fish.id), class:"btn btn-success" %>
      <%= link_to '削除', admin_fish_path(@fish.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-success" %>

    </div>
  </div>
</div>
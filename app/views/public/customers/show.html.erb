<div class="container">
  <div class="row">
    <div class="col">
      <h2>マイページ</h2>
      <table class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <%= link_to '編集する', customers_information_edit_path, class:"btn btn-success" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2><%= @tag.name %>のお店一覧</h2>
      
      <% @shop.each do |shop| %>
        <div>
          <%= link_to shop_path(shop) do %>
            <%= image_tag shop.image, size: "200x150" %>
            <%= shop.shop_name %>
          <% end %>
        </div>
      <% end %>
      
      
    </div>
  </div>
</div>
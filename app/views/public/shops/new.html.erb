<div class="container">
  <div class="row">
    <div class="col">
      <h2>お店投稿</h2>
      <%= form_with model: @shop, url: shops_path do |f| %>
        <%= f.hidden_field :prefecture_id, value: (params[:prefecture_id] || @shop.prefecture_id) %>
        <div class="form-group">
          <label>画像</label>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <label>店名</label>
          <%= f.text_field :shop_name %>
        </div>

        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :shop_address %>
        </div>

        <div class="form-group">
          <label>説明</label>
          <%= f.text_field :shop_introduction %>
        </div>
        
        <div class="form-group">
          <%= f.submit '投稿', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
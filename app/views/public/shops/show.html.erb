<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-4">お店詳細</h2>
      
      <table>
        <tr>
          <td></td>
          <td><%= image_tag @shop.image, size: "200x200" %></td>
        </tr>
        
        <tr>
          <td>店名</td>
          <td><%= @shop.shop_name %></td>
        </tr>
        
        <tr>
          <td>住所</td>
          <td><%= @shop.shop_address %></td>
        </tr>
        
        <tr>
          <td>説明</td>
          <td><%= @shop.shop_introduction %></td>
        </tr>
      </table>
      
      
      <div id="star_<%= @shop.id %>"></div>
      <script>
        $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#star_<%= @shop.id %>');
        if (elem == null) return;
  
        elem.innerHTML = "";
        let opt = {  
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        score: "<%= @shop.star %>",
        readOnly: true,
      };
      raty(elem, opt);
    });
    </script>
      <%= link_to 'コメント一覧・投稿', shop_comments_path(shop_id: @shop.id), class:"btn btn-success" %>
    </div>
  </div>
</div>